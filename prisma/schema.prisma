datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String      @default(uuid()) @id
  login String
  password String
  updatedAt Int
  createdAt Int
  version Int
}

model Artist {
  id    String     @default(uuid()) @id
  name String
  grammy Boolean
  tracks Track[]
  albums Album[]
}

model Album {
  id    String     @default(uuid()) @id
  name String
  year Int
  artist Artist?   @relation(fields: [artistId], references: [id], onDelete: SetNull)
  artistId String?
  tracks Track[]
}

model Track {
  id    String      @default(uuid()) @id
  name String
  artist Artist?    @relation(fields: [artistId], references: [id], onDelete: SetNull)
  artistId String?
  album Album?      @relation(fields: [albumId], references: [id], onDelete: SetNull)
  albumId String?
  duration Int
}